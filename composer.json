{
  "name": "linkedcode/csrf-middleware",
  "description": "Middleware PSR-15 para protección CSRF con tokens firmados de un solo uso, estrategias Web/API y extensión Twig.",
  "type": "library",
  "license": "GPL-3.0-or-later",
  "require": {
    "php": ">=8.1",
    "psr/http-message": "^1.1|^2.0",
    "psr/http-server-middleware": "^1.0",
    "psr/http-server-handler": "^1.0",
    "twig/twig": "^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "nyholm/psr7": "^1.8"
  },
  "autoload": {
    "psr-4": {
      "Linkedcode\\Middleware\\Csrf\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Linkedcode\\Middleware\\Csrf\\Tests\\": "tests/"
    }
  },
  "config": {
    "optimize-autoloader": true
  }
}
